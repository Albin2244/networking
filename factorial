echo "Enter a number:"
read number
factorial=1
for (( i=1; i<=number; i++ )); do
factorial=$(( factorial * i ))
done
echo "Factorial of $number: $factorial"

output
mlm@mlm-H81:~/Desktop/albinnetworking$ chmod +x factorial.sh
mlm@mlm-H81:~/Desktop/albinnetworking$ ./factorial.sh
Enter a number:
4
Factorial of 4: 24
mlm@mlm-H81:~/Desktop/albinnetworking$ 

